mixin storeForm(store={})
    form(action=`/add/${store._id || ''}` method="POST" class="class")
        label(for="name") Name
        input(type="text" name="name" id="name" value=store.name)
        label(for="description") Description
        textarea(name="description" id="description")= store.description
        label(for="address") Dirección
        input(type="text" name="location[address]" id="address" value=(store.location && store.location.address))
        label(for="lng") Dirección Lng
        input(type="text" id="lng" name="location[coordinates] [0]" value=(store.location && store.location.coordinates[0]) required)
        label(for="lat") Dirección Lat
        input(type="text" id="lat" name="location[coordinates] [1]" value=(store.location && store.location.coordinates[1]) required)
        - const choices= ['Wifi', 'Open Late', 'Family Friendly', 'Vegatarian', 'Licensed']
        - const tags = store.tags || []
        ul.tags
            each choice in choices
                .tag.tag__choice
                    input(type="checkbox" value=choice id=choice name="tags" checked=(tags.includes(choice)))
                    label(for=choice) #{choice}
        input(type="submit" value="Save →" class="button")